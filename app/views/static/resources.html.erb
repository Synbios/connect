<!-- BREADCRUMBS -->
<div class="page-header">
  <div class="container">
    <h1 class="page-title pull-left">RESOURCES</h1>
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li class="active"> Resources </li>
    </ol>
  </div>
</div>
<!-- END BREADCRUMBS -->

<!-- PAGE CONTENT -->
<div class="page-content">
  <div class="container">
  	<section>
  	  <h3>List of avaliable resources</h3>

      <%= render "resource_list_plain" %>
      
      <div class="text-center" id="control_buttons">
        <button data-toggle="modal" data-target="#visitor_info" class="text-center btn btn-lg btn-info">
          Download resources <i class="fa fa-cloud-download fa-lg"></i>
        </button>
      </div>
      
     
  </div>
</div>

<!-- END PAGE CONTENT -->


<!-- MODAL -->
<div class="modal fade" id="visitor_info" tabindex="-1" role="dialog" aria-labelledby="visitor_info_label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      
      <div class="modal-body">
        <%= form_for Visitor.new, remote:true, :authenticity_token => true, :html => {:role => "form", :class => "form-horizontal", :id => "visitor_form" } do |f| %>

          <p class="lead">Thank you for using our service. In order to serve you better in the future please leave your email address.</p>
          <br>
          <div class="form-group">
            <%= f.label :email, "Email", class: "control-label sr-only" %>
            <div class="col-sm-12">
              <div class="input-group">
                <%= f.text_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: "form-control", placeholder: "your email" %>
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
              </div>
            </div>
            
          </div>
          <p class="text-center">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Proceed to file links <i class="fa fa-arrow-right"></i></button>
          </p>
        <% end %>
        
        
      </div>
    </div>
  </div>
</div>
<!-- END MODAL -->